package com.pracownia5;

public class Lista
{
	public Lista()
	{
		m_poczatek = null;
		m_koniec   = null;
	}
	
	public void wstaw(Object p_wartosc)
	{
		Wezel l_wezel = new Wezel(null, null, p_wartosc);
		if (isEmpty())
		{
			m_poczatek = l_wezel;
			m_koniec   = l_wezel;
		}
		else
		{
			l_wezel.setPoprzedni(m_koniec);
			m_koniec.setNastepny(l_wezel);
			m_koniec = l_wezel;
		}
	}
	
	public void wstaw(Wezel p_iterator, Object p_wartosc)
	{
		Wezel l_wezel = new Wezel(p_iterator, p_iterator.getNastepny(), p_wartosc);
		p_iterator.getNastepny().setPoprzedni(l_wezel);
		p_iterator.setNastepny(l_wezel);
		
		
	}
	
	public void usun()
	{
		if (isEmpty())
		{
			return;
		}
			
		m_koniec = m_koniec.getPoprzedni();
	}
	
	public void usun(Wezel iterator)
	{
		if (iterator.getNastepny() != null)
		{
			iterator.getNastepny().setPoprzedni(iterator.getPoprzedni());
		}
		if (iterator.getPoprzedni() != null)
		{
			iterator.getPoprzedni().setNastepny(iterator.getNastepny());
		}
	}
	
	public boolean isEmpty()
	{
		return m_poczatek == null;
	}
	
	
	
	Wezel m_poczatek;
	Wezel m_koniec;
}
